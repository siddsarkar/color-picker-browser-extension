{
  "name": "color-picker-browser-extension",
  "version": "1.0.0",
  "description": "Browser extension to pick color anywhere from screen.",
  "scripts": {
    "start": "parcel watch src/manifest.json --host localhost",
    "build": "parcel build src/manifest.json --no-optimize --no-source-maps --no-content-hash --dist-dir build",
    "lint": "eslint --ext .ts,.tsx src",
    "lint:fix": "eslint --ext .ts,.tsx src --fix",
    "format": "prettier --write .",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/siddsarkar/color-picker-browser-extension.git"
  },
  "keywords": [
    "color-picker",
    "browser-extension",
    "parcel"
  ],
  "author": "Siddhartha Sarkar",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/siddsarkar/color-picker-browser-extension/issues"
  },
  "homepage": "https://github.com/siddsarkar/color-picker-browser-extension#readme",
  "devDependencies": {
    "@parcel/config-webextension": "^2.12.0",
    "@types/chrome": "^0.0.263",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "autoprefixer": "^10.4.18",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.2",
    "parcel": "^2.12.0",
    "postcss": "^8.4.35",
    "postcss-plugin": "^1.0.0",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.12",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "siddsarkar-tiny-event-emitter": "^1.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "npm run format",
      "npm run lint:fix"
    ],
    "**/*.{html,css,json,md}": [
      "npm run format"
    ]
  }
}
